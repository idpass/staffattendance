<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="Designation" />

        <Spinner
            
            android:id="@+id/staff_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

        </Spinner>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_first_name"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="text"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_last_name"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <EditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="Last Name"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/staff_dob_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="Date of Birth"
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText

            android:id="@+id/staff_dob_date"
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Date of Birth"
            android:inputType="text"
            android:longClickable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="Gender" />

        <RadioGroup

            android:id="@+id/staff_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:weightSum="3">

            <RadioButton
                android:checked="true"
                android:id="@+id/gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male" />

            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female" />

            <RadioButton
                android:id="@+id/gender_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Others" />
        </RadioGroup>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/staff_ethinicity"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ethinicity"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_small"
            android:text="Bank" />

        <Spinner
            android:id="@+id/staff_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

        </Spinner>
    </LinearLayout>

    <EditText

        android:id="@+id/staff_bank_other"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:hint="Enter Bank Name"
        android:inputType="text"
        android:longClickable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_bank_account"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Number"
            android:inputType="text"
            android:longClickable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_contact_number"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_email"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText


            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/staff_address"
        style="@style/OfflineSiteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:clickable="true"
        android:orientation="vertical">

        <TextView

            android:id="@+id/staff_contract_start_date_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="Contract Start Date"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_caption"
            android:visibility="gone" />

        <EditText

            android:id="@+id/staff_contract_start_date_date"
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Contract Start Date"
            android:inputType="text"
            android:longClickable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:clickable="true"
        android:orientation="vertical">

        <TextView

            android:id="@+id/staff_contract_end_date_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="Contract End Date"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_caption"
            android:visibility="gone" />

        <EditText

            android:id="@+id/staff_contract_end_date_date"
            style="@style/OfflineSiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Contract End Date"
            android:inputType="text"
            android:longClickable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <Button
        android:id="@+id/staff_photo"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:drawablePadding="8dp"
        android:drawableStart="@android:drawable/ic_menu_camera"
        android:text="Take Photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idpass_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_idpass_square" />
        <TextView
            android:id="@+id/idpass_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:ellipsize="middle"
            android:singleLine="true"
            android:hint="No ID PASS Selected"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        android:paddingLeft="40dp">
        <Button
            android:id="@+id/idpass_identify"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Scan ID PASS" />

        <Button
            android:id="@+id/idpass_enroll"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="New ID PASS" />
    </LinearLayout>

    <Button
        android:id="@+id/staff_save"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:visibility="gone" />




    <android.support.design.button.MaterialButton
        app:icon="@drawable/ic_add_24dp"
        app:iconTint="@color/white"
        android:id="@+id/staff_send"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_xxlarge"
        android:padding="12dp"
        android:text="Save"
        android:textSize="@dimen/material_text_button" />

</LinearLayout>
